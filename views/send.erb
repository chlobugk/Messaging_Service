<html>

<div class="layout">

<form action='/message_home' method='get'>
	<input type='submit' value='Back To Home Feed'>
</form>

	<div class="account" style="margin-top: -3%">Welcome <%=username%><br>
		<form action='settings' method='post'>
			<input type="submit" value="Account Settings"></div>
		</form>

		<form action='/send' method='post'>
			<table style="margin-right:0px;margin-left:auto;" class='table' border='1'>
				<thread>
					<tr>
						<th>Conversations</th>
					</tr>
				</thread>
				<tbody>
					<%friends.each do |friend|%>
					<tr>
						<td><%=friend["friends"]%></td>
					</tr>
					<%end%>
				</tbody>

		</table><br>

		<center>
		<div class="message_box" style="margin-top: -16%">
				<!-- <p class='message triangle-isosceles'> -->
				<h4>Messaging > <%=friend%></h4><br>
		<table class="msg" cellspacing="0" cellpadding="1" border="1" width="300">
			<thread>
				<tr>
					<th><%=friend%></th>
					<th>Me</th>
					<th>Time</th>
				</tr>
			</thread>
			<tbody>

			<%msg_table.each do |msg|%>
			<tr>
				<td class="received"><%=msg["receive"]%></td>
				<td class="sent"><%=msg["send"]%></td>
				<td class="received"><%=msg["timestamp"]%></td>
			</tr>
			<%end%>

			</tbody>
			</table>

			</p>
			<input type='text' name='message' placeholder="message">
			<input type='submit' value='Send'>
		</form><br>
		</div>
		</center>
		</div>
	</div>
</html>