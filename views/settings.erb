	<thread>
		<tr>
			<th>Following</th>
			<th>Followers</th>
		</tr>
	</thread>
	<tbody>
		<%friends.each do |friend|%>
		<tr>
			<td><%=friend["following"]%></td>
			<td><%=friend["followers"]%></td>
		</tr>
		<%end%>
	</tbody>
</table>
</center>
</div>

